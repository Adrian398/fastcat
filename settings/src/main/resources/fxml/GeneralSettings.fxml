<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ui.BorderedTitledPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="600.0" spacing="20.0"
      stylesheets="@../css/Settings.css" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="controller.GeneralSettingsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <BorderedTitledPane title="General">
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="500.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
            <Label text="AutoSave Interval"/>
            <Spinner fx:id="spinnerAutoSaveInterval" GridPane.columnIndex="1"/>
        </GridPane>
    </BorderedTitledPane>
</VBox>
